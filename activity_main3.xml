<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@drawable/picasso_doramaar"
    android:backgroundTint="#99FFFFFF"
    android:backgroundTintMode="src_over">

    <TextView
        android:layout_width="345dp"
        android:layout_height="47dp"
        android:background="@color/design_default_color_primary"
        android:text="@string/select_questionnaire"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ASPD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />

    <Button
        android:id="@+id/ASPD"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:text="@string/ASPD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/NPD"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:text="@string/NPD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ASPD"
        app:layout_constraintVertical_bias="0.135"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/BPD"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginBottom="256dp"
        android:text="@string/BPD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NPD"
        app:layout_constraintVertical_bias="1.0"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/HPD"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:text="@string/HPD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BPD"
        app:layout_constraintVertical_bias="0.323"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>